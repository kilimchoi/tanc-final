<div id="wrap">
<h2 class="title">Login/Sign Up</h2>
<%= form_tag :action => "login" do %>
      <%= text_field_tag 'email', @email, :placeholder => 'Email' %>
      <%= password_field_tag 'password', nil, :placeholder => 'Password' %>      
      <%= submit_tag 'Login' %>
  <% end %>
<%= link_to('Forgot your password?', '#', :id => 'forgot_password') %><br>
<%= link_to('New Member Sign Up', '/member/signup', :id => 'signup') %>
</div>
