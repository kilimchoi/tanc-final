<div id="wrap">
<h2 class="title">Login/Sign Up</h2>
<%= form_tag :action => "submit" do %>
      <%= text_field_tag 'email', nil, :placeholder => 'Email' %>
      <%= text_field_tag 'password', nil, :placeholder => 'Password' %>      
      <%= submit_tag 'Submit' %>
  <% end %>

<%= link_to('New User Sign up here!', '/member/signup') %>
</div>
